<h1>Restaurants</h1>

<% @restaurants.each do |restaurant| %>
	<div>
		<h3> Name: <%= link_to restaurant.name, restaurant_path(restaurant) %> </h3>
		<p> Description: <%= restaurant.description %> </p>
		<p> Address: <%= restaurant.address %> </p>
		<p> Capacity: <%= restaurant.capacity %> </p>
	</div>
<% end %>