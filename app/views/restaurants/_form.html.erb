<%= form_for @restaurant do |f| %>
<div class="field">
    <%= f.label :name %> 
    <%= f.text_field :name %>
</div>

<div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
</div>

<div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
</div>

<div class="field">
    <%= f.label :capacity %>
    <%= f.number_field :capacity %>
</div>

<div class="field">
    <%= f.label "Opening time" %>
    <%= f.time_select :hours_open, prompt: {hour: 'Choose hour', minute: 'Choose minute'}, minute_step: 15, ampm: true %>
</div>

<div class="field">
    <%= f.label "Closing time" %>
    <%= f.time_select :hours_closed, prompt: {hour: 'Choose hour', minute: 'Choose minute'}, minute_step: 15, ampm: true  %>
</div>

<%= f.submit class: :button %>

<% end %>